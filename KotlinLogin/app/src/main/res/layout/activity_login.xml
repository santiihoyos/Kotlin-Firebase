<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bigbangcode.kotlinlogin.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="99dp"
        android:layout_height="96dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginEnd="142dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="143dp" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="383dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:padding="@android:dimen/app_icon_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="120dp">

        <EditText
            android:id="@+id/EditText_User_LoginActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="user"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/EditText_Password_LoginActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:forceHasOverlappingRendering="true"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/Button_Enter_LoginActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="Entrar" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/Button_GoogleSigIn_LoginActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/LoginButton_LoginFacebook_LoginActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
